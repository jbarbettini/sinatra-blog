<h1><%=h @post.title %></h1>
<p><%=h @post.body %></p>
<br>

<div class="panel panel-info">
  <div class="panel-heading">
    <h2 class="panel-title">Stats &amp; Other Stuff</h2>
  </div>
  <div class="panel-body">
    <p> 
      <strong>Word Count:</strong> 
      <%=h @post.body.scan(/\w+/).size %> 
    </p>
    <p> 
      <strong>Average Word Length: </strong>
      <%= avg_length(@post.body) %>
    </p>
    <p> 
      <strong>Most Common Word(s): </strong>
      <%= common_word(@post.body) %>
    </p>
    
  </div>
</div>

<a href="/posts/<%= @post.id %>">Back to Post</a>